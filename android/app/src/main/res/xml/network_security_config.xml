<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Bloquear todo trÃ¡fico sin cifrar (HTTP) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Permitir conexiones solo a dominios de confianza -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">graph.microsoft.com</domain>
        <domain includeSubdomains="true">login.microsoftonline.com</domain>
        <domain includeSubdomains="true">login.live.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
